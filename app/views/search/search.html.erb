<h1>Search Results for:  <i><%= params[:term] %></i></h1>

<% if @doctors %>
  <ul class="search_results">
    <% @doctors.each do |doctor| %>
      <li>
        <h3>
          <%= link_to doctor.name, controller: "doctors", action: "show", id: doctor.id %>, <%= doctor.class.name %>
        </h3>
      </li>
    <% end %>
  </ul>
  <% else %>
    <p>Your search did not match any documents.</p>
  <% end %>
